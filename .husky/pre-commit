#!/bin/sh

echo ""
echo "üß™ Running tests related to staged files..."

STAGED_TESTABLE_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|tsx|js|jsx)$' | tr '\n' ' ')

if [ -n "$STAGED_TESTABLE_FILES" ]; then
  npx jest --bail --findRelatedTests $STAGED_TESTABLE_FILES
  TEST_EXIT_CODE=$?
else
  echo "üì≠ No testable staged files found. Skipping tests."
  TEST_EXIT_CODE=0
fi

if [ $TEST_EXIT_CODE -ne 0 ]; then
  echo ""
  echo "‚ùå Tests failed. Commit aborted."
  exit 1
fi

echo ""
echo "üîç Running lint-staged for code quality checks..."
npx lint-staged
LINT_EXIT_CODE=$?

echo ""
if [ $LINT_EXIT_CODE -eq 0 ]; then
  echo "‚úÖ All checks passed. Proceeding with commit."
  exit 0
else
  echo "‚ùå Lint-staged checks failed. Commit aborted."
  exit 1
fi
